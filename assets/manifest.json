{
  "manifest_version": 2,
  "name": "Refined Gitlab",
  "description": "Extension which simplifies Gitlab",
  "version": "0.4",
  "homepage_url": "https://github.com/kiwicom/refined-gitlab",
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Gitlab extension"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "https://github.com/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "web_accessible_resources": [
    "agent.js"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://gitlab.com/*",
        "https://gitlab.skypicker.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
