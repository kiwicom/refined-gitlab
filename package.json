{
  "name": "refined-gitlab",
  "version": "1.0.0",
  "description": "",
  "main": "popup.js",
  "dependencies": {
    "webext-dynamic-content-scripts": "^2.0.1"
  },
  "devDependencies": {
    "chrome-webstore-upload-cli": "^1.1.1",
    "dot-json": "^1.0.3",
    "jest": "^20.0.4",
    "prettier": "^1.3.1",
    "rollup": "^0.42.0",
    "rollup-config-webext": "^1.1.0",
    "rollup-watch": "^4.0.0",
    "webext": "^1.9.1-with-submit.1",
    "npm-run-all": "^4.0.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1"
  },
  "scripts": {
    "test": "jest ...",
    "prettier": "prettier",
    "build:c": "rollup -c node:webext -i src/content.js -o extension/content.js",
    "build:b": "rollup -c node:webext -i src/background.js -o extension/background.js",
    "build:o": "rollup -c node:webext -i src/options/index.js -o extension/options/index.js",
    "build": "run-p build:*",
    "watch": "run-p --continue-on-error --silent 'build:* -- --watch'",
    "release": "cd extension && webstore upload --auto-publish",
    "update-version": "dot-json extension/manifest.json version $(date -u +%y.%-m.%-d.%-H%M)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiwicom/refined-gitlab.git"
  },
